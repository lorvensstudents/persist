<h1>Brights</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Address</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brights.each do |bright| %>
      <tr>
        <td><%= bright.name %></td>
        <td><%= bright.age %></td>
        <td><%= bright.address %></td>
        <td><%= bright.phone %></td>
        <td><%= link_to 'Show', bright %></td>
        <td><%= link_to 'Edit', edit_bright_path(bright) %></td>
        <td><%= link_to 'Destroy', bright, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

